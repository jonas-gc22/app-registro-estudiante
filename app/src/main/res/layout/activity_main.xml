<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5F9">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="32dp">

            <!-- TÍTULO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro Universitario"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_gravity="center"
                android:paddingBottom="8dp"/>

            <!-- Universidad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Universidad Tecnológica de Santiago (UTESA)"
                android:textSize="14sp"
                android:textColor="#475569"
                android:layout_gravity="center"
                android:paddingBottom="24dp"/>

            <!-- Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Completo"
                android:textStyle="bold"
                android:textColor="#334155"/>

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Ingrese su nombre"
                android:padding="12dp"/>

            <!-- Matrícula -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matrícula"
                android:textStyle="bold"
                android:textColor="#334155"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etMatricula"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Ej: 1-18-4259"
                android:padding="12dp"/>

            <!-- Carrera -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccione Carrera"
                android:textStyle="bold"
                android:textColor="#334155"
                android:layout_marginTop="16dp"/>

            <Spinner
                android:id="@+id/spCarrera"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <!-- Año -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Año Académico"
                android:textStyle="bold"
                android:textColor="#334155"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etAno"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Ej: 2026"
                android:inputType="number"
                android:padding="12dp"/>

            <!-- Botón -->
            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Registrar Estudiante"
                android:layout_marginTop="24dp"
                android:backgroundTint="#6366F1"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <!-- CARD RESULTADO -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardResultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                card_view:cardCornerRadius="16dp"
                card_view:cardElevation="8dp"
                android:visibility="gone"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvResultado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#1E293B"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- FOOTER -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#111827"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desarrollado por:"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jonás García Corniel – 1-18-4259\nAdonis Rodríguez – 117-4399\nEuris Joel Acosta – 1-19-3584\nGabriel Hernández Galván – 2-21-3988\nErik Miguel Gil Cruz – 1-22-5249"
            android:textColor="#E5E7EB"
            android:textSize="13sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>